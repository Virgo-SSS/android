<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDetailMahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:elevation="5dp"
        android:backgroundTint="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imgDetailMahasiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/a"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <TextView
                android:id="@+id/tvDetailNim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2121001"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail nama"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvDetailAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail alamat"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tvDetailProdi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="detail prodi"
                android:textSize="16sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>